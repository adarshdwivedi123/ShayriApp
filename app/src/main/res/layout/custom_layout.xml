<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_height="?attr/actionBarSize"/>

    <TextView
        android:id="@+id/countTEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/aldrich"
        android:text="0/100"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/countTextColor"
        android:textStyle="bold" />
 <RelativeLayout
     android:id="@+id/relativeLayout"
     android:layout_width="match_parent"

     android:layout_centerHorizontal="true"
     android:layout_marginTop="120dp"
     android:layout_height="300dp">
     <androidx.cardview.widget.CardView
         app:cardBackgroundColor="@color/colorAccent"
         android:layout_width="match_parent"
         android:layout_margin="12sp"
         app:cardCornerRadius="8dp"
         android:layout_height="match_parent">
         


         <RelativeLayout
             android:background="@drawable/bg"
             android:layout_margin="6dp"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <TextView

                 android:id="@+id/quotesTEXT"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerInParent="true"
                 android:elevation="8dp"
                 android:gravity="center"
                 android:text="जो तीर भी आता वो खाली नहीं जाता,\n
मायूस मेरे दिल से सवाली नहीं जाता,\n
काँटे ही किया करते हैं फूलों की हिफाज़त,\n
फूलों को बचाने कोई माली नहीं जाता।"
                 android:textAlignment="center"
                 android:textColor="@android:color/white"
                 android:textStyle="bold"
                 android:textSize="16sp"
                 tools:targetApi="LOLLIPOP" />
         </RelativeLayout>
         



     </androidx.cardview.widget.CardView>

 </RelativeLayout>
    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_below="@id/relativeLayout"

        android:layout_height="wrap_content">





    </RelativeLayout>
<RelativeLayout
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_marginBottom="30dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="6dp"
        app:cardCornerRadius="8dp"
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:baselineAligned="true"
            android:weightSum="4">
            
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/backbtn"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_centerInParent="true"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="500dp"
                    >

                    <ImageView
                        android:src="@drawable/back"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>


                </androidx.cardview.widget.CardView>


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/copybtn"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_centerInParent="true"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="500dp"

                    >


                    <ImageView
                        android:src="@drawable/ic_baseline_file_copy_24"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>


                </androidx.cardview.widget.CardView>


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/sharebtn"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_centerInParent="true"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="500dp">


                    <ImageView
                        android:src="@drawable/share1"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>



                </androidx.cardview.widget.CardView>


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent">
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/nextbtn"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_centerInParent="true"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="500dp">



                    <ImageView
                        android:src="@drawable/forward"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>
            
        </LinearLayout>



    </androidx.cardview.widget.CardView>



</RelativeLayout>

    
</RelativeLayout>